function solution(n)
{
    var answer = 0;
    let arr;
    arr = n.toString().split("");
    
    for(var i = 0; i < arr.length; i++){
        answer += parseInt(arr[i]);
    }

    return answer;
}



=============================================
function solution(n){
  let arr = n.toString().split("").map(x => parseInt(x));
  return arr.reduce((acc, cur) => acc + cur, 0);
}
